@using HardaGroup.ERP.Entities;
@{
    ViewBag.title = "月生产成本表";
    List<Month> months = (List<Month>)ViewData["month"];
}
<style>
    .blue-column{
        background-color:lightblue;
    }
    .pink-column{
        background-color:lightpink;
    }
</style>
<div class="wrapper wrapper-content">


    <div class="row">
        <div class="col-xs-12 col-is-12 col-sm-12 col-md-12">

            
            <div class="col-xs-12 col-is-6 col-sm-4 col-md-4">
                <div class="col-xs-5 col-is-4 col-sm-5 col-md-4">
                    <label class="search-title">会计区间</label>

                </div>
                <div class="col-xs-7 col-is-8 col-sm-7 col-md-8">
                    <select id="selSearchMonth" class="select-small-full">
                        <option value="">请选择月份区间</option>
                        @foreach(var month in months)
                        {
                            <option value="@month.MonthId">@month.MonthName</option>
                        }
                    </select>

                </div>
            </div>
            <div class="customer-table">
                <div id="toolbar">
                    @*<select class="form-control">
                        <option value="basic">Export Basic</option>
                        <option value="all">Export All</option>
                        <option value="selected">Export Selected</option>

                    </select>
                    <a id="btnAdd" class="btn btn-outline btn-primary" title="新增">
                        <i class="glyphicon glyphicon-plus"></i>
                    </a>
                    <a id="btnDelete" class="btn btn-outline btn-warning" title="删除">
                        <i class="glyphicon glyphicon-trash"></i>
                    </a>*@
                </div>
                <table id="table"></table>

            </div>

        </div>

    </div>
</div>
<!--#region新增-->
<div class="curd-model modal fade" id="usertypeadd" role="dialog"
     data-backdrop="static" aria-hidden="true">
    <div class="modal-dialog small-modal">
        <div class="modal-content small-modal-content">
            <div id="divAddContainer"></div>
        </div>
    </div>

</div>




<script type="text/javascript">

    var allCostItems = JSON.parse('@Html.Raw(ViewData["jsonAllCostItems"])');

    $(document).ready(function () {
        InitTable();
        InitToolBarButton();
        InitModalEvent();
        
        //$('#toolbar').find('select').change(function () {
        //    $("#table").bootstrapTable('refreshOptions', {
        //        exportDataType: $(this).val()
        //    });
        //});

    });
    $(window).resize(function () {
        $('#table').bootstrapTable('resetView');
    });

    //构造列
    function ConstructColumns()
    {
        var columns = [{
            checkbox: true
        },
            {
                field: 'Id',
                title: 'Id',
                visible: false,
            },
            {
                field: 'MonthId',
                title: '月份区间',
                filterControl: "input"
            },
            {
                field: 'ProdId',
                title: '物料编号',
                filterControl: "input"
            },
            {
                field: 'ProdName',
                title: '物料名称',
                filterControl: "input",
                filterStartsWithSearch: true

            }, {
                field: 'ProdSpec',
                title: '物料规格'
            }, {
                field: 'UnitName',
                title: '单位'
            }, {
                field: 'Quantity',
                title: '产量'
            }
        ];

        for (var i = 0; i < allCostItems.length;i++)
        {
            columns.push({
                field: allCostItems[i].CostItemId,
                title: allCostItems[i].CostItemName,
                class: "blue-column",
                formatter: function (value, row, index) {
                    
                    var result = 0;
                    for (i = 0; i < row.MoneyDetails.length;i++)
                    {
                        if (this.field == row.MoneyDetails[i].DefCostItemId)
                        {
                            result = row.MoneyDetails[i].TotalCost;
                            break;
                        }
                    }
                    return result;
                    
                }
            });
        }

        columns.push({
            field: '',
            title: '无类别金额',
            class: "pink-column",
            formatter: function (value, row, index) {

                var result = 0;
                for (i = 0; i < row.MoneyDetails.length; i++) {
                    if (this.field == row.MoneyDetails[i].DefCostItemId) {
                        result = row.MoneyDetails[i].TotalCost;
                        break;
                    }
                }
                return result;

            }
        });

        columns.push({
            field: 'Cost',
            title: '单位成本'
        });

        columns.push({
            field: 'Money',
            title: '总成本'
        });
        return columns;
    }

    function InitTable()
    {
        var columns = ConstructColumns();

        $('#table').bootstrapTable({
            height: $(document.body).height() - $(".search-area").height()-20,
            method: 'post',                 //The method type to request remote data.
            url: '/Finance/MonthCostProduction/GetPageData',
            dataType: "json",               //The type of data that you are expecting back from the server.
            contentType:'application/json',
            pagination: true,               //True to show a pagination toolbar on table bottom.
            pageSize: 10,                   //初始化每页显示几条
            pageNumber:1,                   //初始化在第几页
            pageList: [10,25,50,100,200,'All'],
            sidePagination: "server",       //服务端请求
            idField: 'Id',
            uniqueId:'Id',
            toolbar:'#toolbar',
            showRefresh:true,
            search: false,
            filterControl: true,   //显示过滤
            filterShowClear: true,  //显示清空过滤按钮
            showExport: true, //数据导出
            exportDataType: 'selected', // 'basic', 'all', 'selected'.
            exportTypes:['json', 'xml', 'csv', 'txt', 'sql', 'excel'],
            clickToSelect: true,     //单击行选中数据
            queryParams: ConstructQueryParams,
            showColumns:true,
            locale:'zh-cn',
            columns: columns

        });

        document.onkeydown = function (e) {
            var ev = document.all ? window.event : e;
            if (ev.keyCode == 13) {

                RefreshTable();
            }
        };

        
    }



    function ConstructQueryParams(param)
    {
        
        var filterObj = {};
        if(param.filter != null)
        {
            filterObj = JSON.parse(param.filter);
        }
        var params = {
            limit: param.limit, //页面大小
            offset:param.offset,//偏移数量
            page: param.offset / param.limit, //页码
            MonthId: $("#selSearchMonth").val(),
            ProdId: filterObj.ProdId == null ? "" : filterObj.ProdId,
            ProdName: filterObj.ProdName ==null?"":filterObj.ProdName
        };
        return params;
    }

    function InitModalEvent() {
        $('#usertypeadd').on('show.bs.modal', function () {
            //打开事件
        });

        $('#usertypeadd').on('hide.bs.modal', function () {
            // 关闭事件
            $("#divAddContainer").html("");

        })


    }

    function CloseAddScreen() {
        $('#usertypeadd').modal('hide');

    }


    function InitToolBarButton() {

        $("#btnAdd").click(function () {
            $('#usertypeadd').modal('show');
            $("#divAddContainer").load("/UserManage/UserType/Add");
        });



        $("#btnDelete").click(function () {
            var selections = $('#table').bootstrapTable('getSelections');
            if (selections.length == 0) {
                layer.alert("请选择要将要删除的数据", {
                    skin: 'layui-layer-molv'
                            , closeBtn: 0
                            , shift: 5 //动画类型
                });
                return;
            }
            var contactIds = [];
            for (var i = 0; i < selections.length; i++) {
                var id = selections[i].Id;
                contactIds.push(id);
            }
            //delete records
            var jsonId = JSON.stringify(contactIds);
            $.ajax({
                type: "post",//使用get方法访问后台
                dataType: "json",//返回json格式的数据
                url: "/UserManage/UserType/BachDeleteById",
                data: jsonId,
                async: false,
                success: function (message) {
                    if (message.Success) {
                        RefreshTable();
                    } else {
                        layer.alert(message.Content, {
                            skin: 'layui-layer-molv'
                            , closeBtn: 0
                            , shift: 5 //动画类型
                        });
                    }

                }
            });
        });
    }

    function Update(id)
    {
        //获取选中的行数据
        var selectRow = $('#table').bootstrapTable('getRowByUniqueId', id);

        var obj = {
            Id: selectRow.Id,
            Code: selectRow.Code,
            Name:selectRow.Name,
        };
        var jsonParam = JSON.stringify(obj);
        $.ajax({
            type: "POST",
            url: "/UserManage/UserType/SaveEdit",
            dataType: "json",
            data: jsonParam,
            async: false,   //同步
            success: function (message) {

                if (!message.Success) {
                    layer.alert(message.Content, {
                        skin: 'layui-layer-molv' //样式类名
                       , closeBtn: 0
                    });
                    return;
                } else {
                    RefreshTable();
                }
            }
        });

    }

    function Remove(id)
    {

        $.ajax({
            type: "post",//使用get方法访问后台
            dataType: "json",//返回json格式的数据
            url: "/UserManage/UserType/DeleteById",
            data: {Id:id},
            async: false,
            success: function (message) {
                if (message.Success) {
                    RefreshTable();
                } else {
                    layer.alert(message.Content, {
                        skin: 'layui-layer-molv'
                        , closeBtn: 0
                        , shift: 5 //动画类型
                    });
                }

            }
        });

    }

    function RefreshTable()
    {
        $('#table').bootstrapTable('refresh');

    }
</script>