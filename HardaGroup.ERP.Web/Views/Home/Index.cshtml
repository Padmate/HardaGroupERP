    //父级弹窗
    function popWindow(option)
    {
        var title = option.title;
        var width = option.width;
        var height = option.height;
        var content = option.content;

        var topWin = layer.open({
            type: 2,
            title: title,
            shadeClose: true,
            shade: false,
            maxmin: true, //开启最大化最小化按钮
            area: [width, height],
            content: content
        });

        return topWin;
    }

    function closeWindow(window)
    {
        layer.close(window);
    }
</script>
